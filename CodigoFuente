#include <LiquidCrystal.h>

// initialize the library with the numbers of the interface pins
LiquidCrystal lcd(7, 8, 9, 10, 11, 12);
const int sensorPin= A0;
void setup() { 
  lcd.begin(16, 2);
  pinMode(2,OUTPUT);
  pinMode(3,OUTPUT);
  pinMode(4,OUTPUT);
  lcd.setCursor(0, 0);
  lcd.print("Temperatura: ");
}

void loop() {
  
  int value = analogRead(sensorPin);
  float millivolts = (value / 1024.0) * 5.0;
  float celsius = (millivolts -0.5)*100; 
   lcd.setCursor(0, 1);
  lcd.print(celsius);
  lcd.print("Â°");
  
  if(celsius<0){
    digitalWrite(3,255);
  	digitalWrite(2,0);
    digitalWrite(1,0);}
  else if (celsius>40){
    	digitalWrite(4,255);
    	digitalWrite(3,0);
   		digitalWrite(2,0);}
  else	{
    	digitalWrite(2,255);
  		digitalWrite(3,0);
    	digitalWrite(4,0);}
  
  delay(1000);
}
